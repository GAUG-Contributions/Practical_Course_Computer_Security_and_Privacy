<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="SensorFeedbackWF.AppShell"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:res="clr-namespace:SensorFeedbackWF.Resources"
    xmlns:views="clr-namespace:SensorFeedbackWF.Views"
    FlyoutBehavior="Flyout">

    <ShellItem Route="Main" Title="{x:Static res:AppResources.MainPageTitle}">
        <ShellContent Route="content" Title="Main" ContentTemplate="{DataTemplate views:MainPage}"/>
    </ShellItem>
    <ShellItem Route="Settings" FlyoutDisplayOptions="AsMultipleItems">
        <ShellSection Route="FeedbackSettings" Title="{x:Static res:AppResources.FeedbackSettings}">
            <ShellContent ContentTemplate="{DataTemplate views:FeedbackSettings}"/>
        </ShellSection>
        <ShellSection Route="MonitoringSettings" Title="{x:Static res:AppResources.MonitoringSettings}">
            <ShellContent ContentTemplate="{DataTemplate views:MonitoringSettings}"/>
        </ShellSection>
    </ShellItem>
</Shell>
